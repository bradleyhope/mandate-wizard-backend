# Netflix Mandate Wizard - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials to git!

# ============================================
# REQUIRED: Database Credentials
# ============================================

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=netflix-mandate-wizard

# Neo4j Graph Database
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# OpenAI API (for LLM)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# OPTIONAL: Application Settings
# ============================================

# Flask
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_secret_key_here

# Ghost CMS (for authentication)
GHOST_URL=https://your-ghost-site.com
GHOST_ADMIN_API_KEY=your_ghost_admin_key_here
GHOST_CONTENT_API_KEY=your_ghost_content_key_here

# Redis (optional, for distributed caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# ============================================
# OPTIONAL: Feature Flags
# ============================================

# Enable/disable features
ENABLE_SEMANTIC_CACHE=true
ENABLE_QUERY_CACHE=true
ENABLE_EMBEDDING_CACHE=true
ENABLE_METRICS=true

# Cache settings
QUERY_CACHE_TTL=1800
EMBEDDING_CACHE_SIZE=1000

# Rate limiting (queries per day)
RATE_LIMIT_FREE=2
RATE_LIMIT_STANDARD=100
RATE_LIMIT_TEAM=500
RATE_LIMIT_ENTERPRISE=unlimited
